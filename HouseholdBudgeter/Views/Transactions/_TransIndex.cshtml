@model IEnumerable<HouseholdBudgeter.Models.Transactions>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->
    <div class="row">
        <div class="col-sm-6">
            <div class="tabbable">
                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        <i class="glyphicon-credit-card"></i>
                        <h4>Transaction</h4>

                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FinancialAccount.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastUpdatedUser.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionUser.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Amount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reconciled)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Updated)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinancialAccount.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastUpdatedUser.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransactionUser.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @if (item.Active == true)
                                        {
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        }
                                        else
                                        {
                                            <strike>@Html.DisplayFor(modelItem => item.Amount)</strike>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reconciled)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransactionDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Updated)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                        @Html.ActionLink("Reconcile", "Reconcile", new { id = item.Id }) |
                                        @if (item.Active == true)
                                        {
                                            @Html.ActionLink("Void", "Void", new { id = item.Id })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Unvoid", "Void", new { id = item.Id })
                                        }



                                    </td>
                                </tr>
                            }

                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <script>
        $(".TransIndex").click(function () {
            $("#transindex-partial").load('/Transactions/_TransIndex/' + $(this).data('id'));
        })
    </script>
}


